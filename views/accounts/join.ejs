<script type="text/javascript">
(function(){   
    $(document).ready(function(){

        // 다국어 <> 파일 치환
        var value = "<%= language.join.emailMessage_1%>";
        var message = "<%= language.join.message%>";
        var emailMessage = "<%= language.join.emailMessage_2%>";

        var str = value.replace(/&lt;/g, '<').replace(/&gt;/g, '>');
        var str_message = message.replace(/&lt;/g, '<').replace(/&gt;/g, '>');
        var str_emailMessage = emailMessage.replace(/&lt;/g, '<').replace(/&gt;/g, '>');

        $("#emailMessage_1").html(str);
        $("#message").html(str_message);
        $("#emailMessage_2").html(str_emailMessage);

        $('#join_form').submit(function(){
            var $useridInput = $('#join_form input[name=userid]');
            var $passwordInput = $('#join_form input[name=password]');
            var $passwordInput2 = $('#join_form input[name=password2]');
            var $displayname = $('#join_form input[name=displayname]');
            var password = $('#password').val();
            var userid = $('#userid').val();
            var userid_regex =  /^[A-Za-z0-9_\.\-]+@[A-Za-z0-9\-]+\.[A-Za-z0-9\-]+/; // 이메일 형식 체크
            var password_regex = /^(?=.*[a-zA-Z])(?=.*[!@#$%^*+=-])(?=.*[0-9]).{8,15}$/; //비번 형식 체크         
            var from, to, subject, text;
            
            if(!$useridInput.val()){
                $("#msg_userid").html("<%= language.join.idCheckMessage_1%>").css("color","red");
                $useridInput.focus();
                return false;
            }            
            if($('#useridCheck').val()!=='checked'){
                alert('<%= language.join.idCheckMessage_2%>');
                return false;
            }
            if($('#displaynameCheck').val()!=='checked'){
                alert('<%= language.join.nickNameCheckMessage%>');
                return false;
            } 
            if(!$passwordInput.val()){
                $("#msg_password").html("<%= language.join.passCheckMessage_1%>").css("color","red");
                $passwordInput.focus();
                return false;
            }
            if(!$passwordInput2.val()){
                $("#msg_password2").html("<%= language.join.passCheckMessage_2%>").css("color", "red");
                $passwordInput2.focus();
                return false;
            }
            
            if(password_regex.test(password) == false) {
                var passwordCheckMessage_1 = "<%= language.join.passwordCheckMessage_1%>";
                var str_passwordCheckMessage_1 = passwordCheckMessage_1.replace(/&lt;/g, '<').replace(/&gt;/g, '>');

                $("#msg_password").html(str_passwordCheckMessage_1).css("color","red");
                $passwordInput.focus();
                return false;
            }
            if($passwordInput.val() !== $passwordInput2.val()){
                $("#msg_password2").html("<%= language.join.passwordCheckMessage_2%>").css("color", "red");
                return false;
            }
            if(!$displayname.val()){
                $("#msg_displayname").html("<%= language.join.nameChceckMessage%>").css("color", "red");
                $displayname.focus();
                return false;
            }        
           
            // if($('input:checkbox[name=agreement]').is(':checked') == false){ // 약관동의
            //     $("#msg_agreement").html("<%= language.join.agreeCheckMessage%>").css("color", "red");
            //     return false;
            // }       

            // 구글 캡챠 체크
            /*
            var v = grecaptcha.getResponse();           
            if(v.length == 0) {
                document.getElementById('msg_recaptcha').innerHTML="로봇이 아닙니다를 체크해주세요";
                return false;
            } else {
                document.getElementById('msg_recaptcha').innerHTML="로봇이 아닙니다 체크 완료";
            }          
            */
            
            // 인증 메일 발송 (submit 버튼 클릭 시 인증 메일 발송되도록 함.)
            to = userid;
            $.get("/accounts/send",{to:to},function(data){
                if(data=="sent"){
                console.log("인증 메일 전송 성공!");
                }
            });      

            // 검증완료시 action으로 넘어감
            return true;
        });        
        
        // 이메일 형식, 중복체크       
        $('#userid').blur(function() {
            var $useridInput = $('#join_form input[name=userid]');
            var userid = $('#userid').val();
            var userid_regex =  /^[A-Za-z0-9_\.\-]+@[A-Za-z0-9\-]+\.[A-Za-z0-9\-]+/;
            var useridValue = $(this).val();
            //값이 있을때만 진행
            if(useridValue){
                $.ajax({
                    url: '/accounts/checkuserid/'+ useridValue.trim(), //trim 양쪽 공백이 있을시 제거
                    type: 'GET',
                })
                .done(function(args) {
                    if(args.userExist){ //아이디가 존재
                        $('#msg_userid').html("<%= language.join.idCheckMessage_false%>").css("color", "red");
                        $('#useridCheck').val(''); //못넘어가게 값을 비운다
                        return false;
                    }else{ //아이디가 존재하지 않음
                        if(userid_regex.test(useridValue)==false){
                            $("#msg_userid").html("<%= language.join.idCheckMessage_false_2%>").css("color", "red");
                            $('#useridCheck').val(''); //못넘어가게 값을 비운다
                            return false;
                        }else{    
                            $('#msg_userid').html("<%= language.join.idCheckMessage_true%>").css("color", "blue");
                            $('#useridCheck').val('checked'); //유효성 통과하게 설정                        
                        }
                    }
                })
                .fail(function(args) {
                    console.log(args);
                });
            }
        });  

        $('#displayname').blur(function() {
            var $displaynameInput = $('#join_form input[name=displayname]');
            var displayname = $('#displayname').val();
            var displaynameValue = $(this).val();
            //값이 있을때만 진행
            if(displaynameValue){
                $.ajax({
                    url: '/accounts/checkDisplayname/'+ displaynameValue.trim(), //trim 양쪽 공백이 있을시 제거
                    type: 'GET',
                })
                .done(function(args) {
                    if(args.displaynameExist){ //닉네임 존재
                        $('#msg_displayname').html("<%= language.join.failNickName%>").css("color", "red");
                        $('#displaynameCheck').val(''); //못넘어가게 값을 비운다
                        return false;
                    }else{ //아이디가 존재하지 않음
                        $('#msg_displayname').html("<%= language.join.successNicName%>").css("color", "blue");
                        $('#displaynameCheck').val('checked'); //유효성 통과하게 설정                        
                    }
                })
                .fail(function(args) {
                    console.log(args);
                });
            }
        });    
    });
})();


</script>
